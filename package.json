{
  "name": "@larcjs/core",
  "version": "1.0.0",
  "description": "LARC Core - Lightweight Asynchronous Relay Core: The PAN (Page Area Network) messaging bus implementation",
  "type": "module",
  "main": "./src/index.js",
  "module": "./src/pan.mjs",
  "exports": {
    ".": {
      "import": "./src/pan.mjs",
      "default": "./src/index.js"
    },
    "./pan": {
      "import": "./src/pan.mjs",
      "default": "./src/pan.js"
    },
    "./pan.mjs": {
      "import": "./src/pan.mjs"
    },
    "./components/pan-bus": {
      "import": "./src/components/pan-bus.mjs"
    },
    "./components/pan-bus.mjs": {
      "import": "./src/components/pan-bus.mjs"
    },
    "./components/pan-client": {
      "import": "./src/components/pan-client.mjs"
    },
    "./components/pan-client.mjs": {
      "import": "./src/components/pan-client.mjs"
    }
  },
  "files": [
    "src/**/*",
    "dist/**/*",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "node scripts/build.js",
    "test": "echo \"Tests coming soon\" && exit 0"
  },
  "keywords": [
    "pan",
    "larc",
    "message-bus",
    "web-components",
    "event-bus",
    "pubsub",
    "messaging",
    "microservices",
    "microfrontends"
  ],
  "author": "Chris Robison",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/larcjs/core.git"
  },
  "bugs": {
    "url": "https://github.com/larcjs/core/issues"
  },
  "homepage": "https://github.com/larcjs/core#readme",
  "devDependencies": {
    "esbuild": "^0.25.11"
  }
}
